<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="fill_parent"
              android:layout_height="fill_parent"
              android:weightSum="1" android:background="@android:color/holo_blue_dark">

    <EditText
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:id="@+id/numberTxt" android:layout_gravity="center_horizontal" android:hint="Number"
            android:inputType="text" android:layout_margin="5dp"/>
    <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/message" android:hint="Message"
            android:inputType="text" android:layout_gravity="left" android:autoText="false"
            android:selectAllOnFocus="false" android:layout_margin="5dp"/>
    <!---->
    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <Button android:layout_weight="0.5"
                android:layout_width="match_parent" android:layout_height="wrap_content" android:text="Log"

                android:id="@+id/logBtn"
                android:background="@android:color/holo_blue_light"
                android:layout_alignParentLeft="true"
                android:layout_margin="2dp"/>
        <Button android:layout_weight="0.5"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Send"
                android:id="@+id/sendBtn"
                android:background="@android:color/holo_blue_light"
                android:layout_margin="2dp"
                android:layout_alignTop="@+id/logBtn"/>
    </LinearLayout>

    <ScrollView
            android:layout_width="match_parent"
            android:layout_height="302dp"
            android:id="@+id/scrollView" android:fillViewport="false" android:background="@android:color/holo_blue_dark">
        <LinearLayout
                android:orientation="vertical"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent" android:id="@+id/linearl" android:visibility="visible"
                android:showDividers="beginning"
                android:background="@android:color/holo_blue_light"
                android:layout_margin="5dp">
        </LinearLayout>
    </ScrollView>

</LinearLayout>

